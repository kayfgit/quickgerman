{
    "name": "quickgerman",
    "version": "1.0.0",
    "description": "Fast German-English translator with global hotkey",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "com.quickgerman.app",
        "productName": "QuickGerman",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": "nsis"
        },
        "files": [
            "**/*",
            "!dist/*",
            "!source/*"
        ]
    },
    "keywords": [
        "german",
        "english",
        "translator",
        "electron"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^26.0.12",
        "electron-icon-builder": "^2.0.1"
    },
    "dependencies": {
        "uiohook-napi": "^1.5.4"
    }
}
